<body style="-webkit-user-select: auto;">
    <form method="post" action="" onsubmit="javascript:return WebForm_OnSubmit();" id="Form1">
    <div class="aspNetHidden">
        <input type="hidden" name="ToolkitScriptManager1_HiddenField" id="ToolkitScriptManager1_HiddenField"
            value="">
        <input type="hidden" name="__EVENTTARGET" id="__EVENTTARGET" value="">
        <input type="hidden" name="__EVENTARGUMENT" id="__EVENTARGUMENT" value="">
        <input type="hidden" name="__VIEWSTATE" id="__VIEWSTATE" value="">
    </div>
    <div id="header_wrapper">
        <div id="header">
            <div id="site_title">
                <h1>
                    <a href="/">
                        <img id="imgLogo" title="Book Club" src="../../Images/logo.png" alt="Book Club" height="30">
                        <span>thư viện của mọi nhà</span> </a>
                </h1>
            </div>
            <p>
                <% QuoteBUS bus = new QuoteBUS(); %>
                <%= bus.GetRandomQuote() %>
            </p>
        </div>
        <!-- end of header -->
    </div>
    <!-- end of menu_wrapper -->
    <div id="menu_wrapper">
        <div id="menu">
            <ul>
                <li><%= Html.ActionLink("Giới thiệu", "Index", "Home", null, new { @class = "current"}) %></li>
                <li><%= Html.ActionLink("Tìm sách", "Index", "Search") %></li>
                <%-- <li><a href="#">Văn hóa đọc</a></li> --%>
                <% if (Session["USER"] != null)
                   {%><li><%= Html.ActionLink("Thông tin", "Information", "Account") %></li><%
                   }%>
                <li><%= Html.ActionLink("Giải đáp", "Index", "FAQ") %></li>
                <li><%= Html.ActionLink("Liên hệ", "Index", "Contact") %></li>
            </ul>
        </div>
        <!-- end of menu -->
    </div>
    <div id="content_wrapper">
            <div class="full_content_box">
                <asp:ContentPlaceHolder ID="TopMainContent" runat="server" />
                <div class="cleaner">
                </div>
            </div>
            <div class="full_content_box_bottom">
            </div>
            <div class="full_content_box">
                <asp:ContentPlaceHolder ID="MiddleMainContent" runat="server" />
                <div class="cleaner">
                </div>
            </div>
            <div class="full_content_box_bottom">
            </div>
            <div class="full_content_box">
                <asp:ContentPlaceHolder ID="BottomMainContent" runat="server" />
